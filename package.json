{
  "name": "check-1-2",
  "version": "0.0.2",
  "description": "Run multiple package.json scripts in parallel with a nice progress UI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "checks": "dist/cli.js"
  },
  "scripts": {
    "checks": "bun run src/cli.tsx",
    "format": "prettier --write .",
    "dev": "tsx src/cli.tsx",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "check:format": "prettier --check .",
    "build": "tsc -p tsconfig.build.json",
    "test": "bun test"
  },
  "keywords": [
    "ci",
    "parallel",
    "checks",
    "scripts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cleye": "^2.0.0",
    "ink": "^4.4.1",
    "ora": "^9.0.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "read-package-up": "^12.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4"
  },
  "checks": {
    "runner": "bun",
    "scripts": [
      "check:format",
      "build",
      "lint",
      "test"
    ]
  }
}
